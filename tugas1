import random


rolls= {}

def rolldice(min,max):
    while True:
        print("Rolling dice........")
        number=random.randint(min,max)
        if number in rolls:
            rolls[number] +=1
        else:
            rolls[number] =1
        print(f"DADU YANG KELUAR:{number}")
        choice=input("INGIN LEMPAR DADU LAGI? (y/n)")
        if choice.lower() == 'n':
            for number in range(1,7):
                print("HASIL", str(number), "TELAH KELUAR", str(rolls[number]), "KALI.")
        else:
            choice = False
            
rolldice(1,6)
